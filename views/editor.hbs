<body>
  <section class="pb-5">
    <div class="container text-center text-white my-5">
      <h2 style="color: black;">Editar / Borrar<h2>
    </div>
    <div class="container py-5 px-5 bg-light">
      <form class="bg-light" action="editProduct" method="POST" enctype="multipart/form-data">
        {{#each arrWarning}}
          <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
              <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            <div>
              {{msg}}
            </div>
          </div>
          {{/each}}
          <input type="text" name="id" value="{{product.id}}" hidden>
          <div class="mb-3 bg-light">
            <label for="equipo" class="form-label">Equipo</label>
            <input type="text" name="equipo" class="form-control" id="equipo" 
            {{#if formData.equipo}} value="{{formData.equipo}}" 
            {{else}}
              value="{{product.equipo}}"
            {{/if}}>
          </div>
        <div class="mb-3">
          <label for="temporada" class="form-label">Temporada</label>
          <input type="text" name="temporada" class="form-control" id="temporada" 
          {{#if formData.temporada}} value="{{formData.temporada}}" 
          {{else}}
            value="{{product.temporada}}"
          {{/if}}>
        </div>
        <div class="mb-3">
          <label for="marca" class="form-label">Marca</label>
          <input type="text" name="marca" class="form-control" id="marca" 
          {{#if formData.marca}} value="{{formData.marca}}" 
          {{else}}
            value="{{product.marca}}"
          {{/if}}>
        </div>
        <div class="mb-3">
          <label for="precio" class="form-label">Precio</label>
          <input type="text" name="precio" class="form-control" id="precio" 
          {{#if formData.precio}} 
            value="{{formData.precio}}"
          {{else}}
            value="{{product.precio}}"
          {{/if}}>
        </div>
        <input type="text" value="{{product.img}}" name="prevImage" hidden>
        <div class="mb-3">
          <label for="imageFile" class="form-label">Imagen</label>
          <input type="file" name="imageFile" class="form-control" id="imageFile">
        </div>
        <button type="submit" style="background: #4eb478;
        border: 0;
        padding: 10px 24px;
        color: #fff;
        transition: 0.4s;
        border-radius: 5px;
        text-decoration: none;"> Editar</button>
        <a href="deleteProduct/{{product.id}}" style="background: #4eb478;
        border: 0;
        padding: 10px 24px;
        color: #fff;
        transition: 0.4s;
        border-radius: 5px;
        text-decoration: none;"> Eliminar</a>
        <a href="/stock" style="background: #4eb478;
        border: 0;
        padding: 10px 24px;
        color: #fff;
        transition: 0.4s;
        border-radius: 5px;
        text-decoration: none;"> Cancelar</a>
      </form>
    </div>
  </section>
</body>